# Enhanced AI Agent OS - Environment Configuration Example
# Copy to .env and adjust as needed. Do NOT commit real secrets.

# ==== Core Application ====
APP_NAME=enhanced-ai-agent-os
APP_ENV=development # development|staging|production
PORT=5678
N8N_BASE_URL=http://localhost:5678

# ==== Database & Cache ====
DB_TYPE=postgres # postgres|mysql|sqlite|mssql
DB_HOST=localhost
DB_PORT=5432
DB_USER=ai_user
DB_PASSWORD=change_me
DB_NAME=ai_agent
# Optional cache/queue
REDIS_URL=redis://localhost:6379

# ==== AI Providers ====
AI_DEFAULT_PROVIDER=openai # openai|anthropic|google|azure

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini # e.g., gpt-4o, gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Google (Vertex/AI Studio)
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-pro

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# ==== Security & Auth ====
# Use strong secrets. Prefer secret managers in production.
JWT_SECRET=replace_with_long_random
ENCRYPTION_KEY=base64:replace_with_32_bytes_base64
HMAC_SECRET=replace_with_long_random
WEBHOOK_SECRET=replace_with_long_random
ALLOW_ORIGINS=* # comma-separated list for CORS in production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# ==== Monitoring, Logging, Tracing ====
LOG_LEVEL=info # debug|info|warn|error
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9464
ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=enhanced-ai-agent-os

# ==== Alerting ====
PAGERDUTY_INTEGRATION_KEY=
SLACK_WEBHOOK_URL=

# ==== External Services & Integrations ====
# Datastore/Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# Email providers (choose one via EMAIL_PROVIDER)
EMAIL_PROVIDER=none # sendgrid|ses|smtp|none
SENDGRID_API_KEY=
SES_ACCESS_KEY_ID=
SES_SECRET_ACCESS_KEY=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=ai@localhost

# Social media (optional)
X_BEARER_TOKEN=
LINKEDIN_ACCESS_TOKEN=
FACEBOOK_ACCESS_TOKEN=

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

GCP_PROJECT_ID=
GCP_CREDENTIALS_JSON=

AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=

# ==== Performance & Execution Defaults ====
PARALLELISM_DEFAULT=4
MAX_RETRIES_DEFAULT=3
BACKOFF_STRATEGY=exponential # constant|linear|exponential
TIMEOUT_MS=30000

# ==== Feature Flags ====
FEATURE_ENABLE_PLANNING=true
FEATURE_ENABLE_EXECUTION=true
FEATURE_ENABLE_QA=true
FEATURE_ENABLE_COMMUNICATION=true

# ==== Compliance & Governance ====
COMPLIANCE_STANDARDS=CAN-SPAM,GDPR,OWASP
AUDIT_LOG_ENABLED=true
AUDIT_LOG_DESTINATION=file # file|stdout|http
AUDIT_LOG_PATH=./audit.log

# ==== Misc ====
TOOLS_BASE_URL=${N8N_BASE_URL}
