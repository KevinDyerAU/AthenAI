# API Configuration
REACT_APP_API_URL=http://localhost:5000

# Service Configuration - Set to 'true' to use real NeoV3 backend services
REACT_APP_USE_REAL_WEBSOCKET=false
REACT_APP_USE_REAL_FILE_SERVICE=false
REACT_APP_USE_REAL_AUTH_SERVICE=false

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_MAX_FILES_PER_UPLOAD=5

# WebSocket Configuration
REACT_APP_WS_RECONNECT_ATTEMPTS=5
REACT_APP_WS_RECONNECT_DELAY=1000

# Debug Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Authentication Configuration
REACT_APP_TOKEN_STORAGE_KEY=access_token
REACT_APP_REFRESH_TOKEN_STORAGE_KEY=refresh_token
