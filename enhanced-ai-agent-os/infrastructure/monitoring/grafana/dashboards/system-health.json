{
  "title": "System Health",
  "uid": "system-health",
  "tags": ["system", "health"],
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Targets Up",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "targets": [
        {"expr": "sum(up)", "legendFormat": "Up"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Target Availability by Job",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6},
      "targets": [
        {"expr": "avg by(job) (up)", "legendFormat": "{{job}}"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Prometheus Scrape Durations",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(prometheus_target_scrape_pool_scrape_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Loki Ingester Entries Ingested",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [
        {"expr": "sum(rate(loki_ingester_ingested_entries_total[5m]))", "legendFormat": "entries/s"}
      ]
    }
  ]
}
