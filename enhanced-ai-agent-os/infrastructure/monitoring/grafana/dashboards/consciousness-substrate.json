{
  "title": "Consciousness Substrate (Neo4j)",
  "uid": "consciousness-substrate",
  "tags": ["neo4j", "graph"],
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "Bolt Connections",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {"expr": "sum(neo4j_bolt_connections_opened_total) - sum(neo4j_bolt_connections_closed_total)", "legendFormat": "open"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Query Execution Time (p95)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(neo4j_query_execution_seconds_bucket[5m])) by (le))", "legendFormat": "p95"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Page Cache Hit Ratio",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "targets": [
        {"expr": "avg(neo4j_page_cache_hit_ratio)", "legendFormat": "hit ratio"}
      ]
    }
  ]
}
